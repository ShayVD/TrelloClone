


<div class="row">
  <div class="col-sm-6">
    <h1>Lists</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_list_path, class: 'btn btn-primary' do %>
    Add New List
  <% end %>
  </div>
</div>
<hr />

<%= tag.div id: :boards, data: { lists: @lists.to_json(include: :cards) } %>

<%
=begin%>
 <div class="row">

  <% @lists.each do |list| %>
    <div class="col-3">
      <%= content_tag :tr, id: dom_id(list), class: dom_class(list) do %>  
          <h5><%= link_to list.name, list %></h5>
      <% end %>
    </div>
  <% end %>

</div> 
